{
  "name": "@cranleighschool/tailwind",
  "version": "1.0.9",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cranleighschool/tailwind.git"
  },
  "description": "Tailwind Theme Plugin with shared colours and fonts for Cranleigh School branding",
  "keywords": [
    "tailwind",
    "plugin",
    "cranleigh",
    "theme"
  ],
  "author": "Fred Bradley",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,cjs,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
